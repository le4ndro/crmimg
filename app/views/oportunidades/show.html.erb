<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @oportunidade.nome %></h1>
</div>
<p>
  <strong>Descrição:</strong>
  <%= @oportunidade.descricao %>
</p>

<p>
  <strong>Status:</strong>
  <%= oportunidade_status(@oportunidade.status) %>
</p>

<p>
  <strong>Receita estimada:</strong>
  <%= @oportunidade.receita_estimada %>
</p>

<p>
  <strong>Probabilidade:</strong>
  <%= oportunidade_probabilidade(@oportunidade.probabilidade) %>
</p>

<p>
  <strong>Decisor:</strong>
  <%= @oportunidade.decisor.nome %>
</p>

<p>
  <strong>Influenciador:</strong>
  <%= @oportunidade.influenciador.nome %>
</p>

<p>
  <strong>Comprador:</strong>
  <%= @oportunidade.comprador.nome %>
</p>

<p>
  <strong>Observação:</strong>
  <%= @oportunidade.observacao %>
</p>

<h3>Atividades</h3>

<%= link_to 'Nova Atividade', new_cliente_potencial_oportunidade_atividade_path(@oportunidade.cliente_potencial_id, @oportunidade.id), :class => "btn btn-primary" %><br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Descrição</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oportunidade.atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.nome %></td>
        <td><%= atividade_tipo(atividade.tipo) %></td>
        <td><%= atividade.descricao %></td>
        <td><%= atividade_status(atividade.status) %></td>
        <td><%= link_to 'Exibir', cliente_potencial_oportunidade_atividade_path(@oportunidade.cliente_potencial_id, @oportunidade.id, atividade.id), :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Editar', edit_cliente_potencial_oportunidade_atividade_path(@oportunidade.cliente_potencial_id, @oportunidade.id, atividade.id), :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Excluir', cliente_potencial_oportunidade_atividade_path(@oportunidade.cliente_potencial_id, @oportunidade.id, atividade.id), method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Editar', edit_cliente_potencial_oportunidade_path(:cliente_potencial_id => @oportunidade.cliente_potencial_id, :id => @oportunidade.id) %> |
<%= link_to 'Voltar', cliente_potencial_path(@oportunidade.cliente_potencial_id) %>
