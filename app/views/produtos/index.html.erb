<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Produtos</h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Exibir', produto, :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Exluir', produto, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path, :class => "btn btn-default" %>
