<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Produtos</h1>
</div>


<%= link_to 'Novo Produto', new_produto_path, :class => "btn btn-primary" %><br><br>

<table id="tbproduto" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </tfoot>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco %></td>
        <td style="width:10%">
            <%= link_to '', produto, data: {toggle: "tooltip", placement: "top" }, title: "Ver Detalhes", :class => "btn btn-primary btn-xs glyphicon glyphicon-eye-open" %>
            <%= link_to '', edit_produto_path(produto), data: {toggle: "tooltip", placement: "top" }, title: "Editar", :class => "btn btn-primary btn-xs glyphicon glyphicon-pencil" %>
            <%= link_to '', produto, method: :delete, data: { confirm: 'Tem certeza?' , toggle: "tooltip", placement: "top" }, title: "Excluir", :class => "btn btn-primary btn-xs glyphicon glyphicon-trash" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
    $('#tbproduto').DataTable({});
</script>
