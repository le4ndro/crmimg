<p id="notice"><%= notice %></p>

<div class="page-header">
	<h1><%= @produto.nome %></h1>
</div>


<div class="panel panel-default">
  <div class="panel-body">
  	<div class="row">
  		<div class="col-md-12">
		    <p>
				  <strong>Descricao:</strong>
				  <%= @produto.descricao %>
				</p>
		  </div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<p>
				  <strong>Preço:</strong>
				  <%= @produto.preco %>
				</p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<p>
				  <strong>Observações:</strong>
				  <%= @produto.observacao %>
				</p>
			</div>
		</div>
  </div>
</div>



<%= link_to 'Editar', edit_produto_path(@produto) , :class => "btn btn-primary" %>
<%= link_to 'Voltar', produtos_path , :class => "btn btn-primary" %>
