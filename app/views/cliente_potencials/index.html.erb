<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Clientes Potenciais</h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliente_potencials.each do |cliente_potencial| %>
      <tr>
        <td><%= cliente_potencial.nome %></td>
        <td><%= cliente_potencial.descricao %></td>
        <td><%= cliente_potencial.website %></td>
        <td><%= link_to 'Exibir', cliente_potencial, :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Editar', edit_cliente_potencial_path(cliente_potencial), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Excluir', cliente_potencial, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente Potencial', new_cliente_potencial_path, :class => "btn btn-default" %>
