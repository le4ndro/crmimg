<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @atividade.nome %></h1>
</div>

<p>
  <strong>Tipo:</strong>
  <%= atividade_tipo(@atividade.tipo)  %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @atividade.descricao %>
</p>

<p>
  <strong>Acompanhamento:</strong>
  <%= @atividade.acompanhamento %>
</p>

<p>
  <strong>Status:</strong>
  <%= atividade_status(@atividade.status) %>
</p>

<p>
  <strong>Observações:</strong>
  <%= @atividade.observacao %>
</p>

<p>
  <strong>Cliente Potencial:</strong>
  <% if @atividade.cliente_potencial != nil %>
    <%= @atividade.cliente_potencial.nome %>
  <% end %>
</p>

<p>
  <strong>Oportunidade:</strong>
  <% if @atividade.oportunidade != nil %>
    <%= @atividade.oportunidade.nome %>
  <% end %>
</p>

<%= link_to 'Editar', edit_atividade_path(@atividade.id) %> |
<%= link_to 'Voltar', atividades_path %>
