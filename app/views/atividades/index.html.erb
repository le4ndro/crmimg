<p id="notice"><%= notice %></p>

<h1>Listing Atividades</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Descricao</th>
      <th>Observacao</th>
      <th>Acompanhamento</th>
      <th>Status</th>
      <th>Oportunidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.nome %></td>
        <td><%= atividade.tipo %></td>
        <td><%= atividade.descricao %></td>
        <td><%= atividade.observacao %></td>
        <td><%= atividade.acompanhamento %></td>
        <td><%= atividade.status %></td>
        <td><%= atividade.oportunidade %></td>
        <td><%= link_to 'Show', atividade %></td>
        <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
        <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

