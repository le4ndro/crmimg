<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Atividades</h1>
</div>


<%= link_to 'Nova Atividade', new_atividade_path, :class => "btn btn-primary" %>
<%= link_to 'Ver Agenda', agenda_path, data: { no_turbolink: true}, :class => "btn btn-primary" %>
<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.nome %></td>
        <td><%= atividade_tipo(atividade.tipo) %></td>
        <td><%= atividade_status(atividade.status) %></td>
        <td><%= link_to 'Exibir', atividade, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Editar', edit_atividade_path(atividade), :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Excluir', atividade, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  



